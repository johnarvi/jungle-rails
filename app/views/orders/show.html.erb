<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %> - Purchase Summary</h1>

  </header>

  <div class="order-summary jumbotron text-center">
    <h2>Thank you for your order!</h2>
    <h3><%= @order.email %></h3>
    <h3><strong>Total: </strong><%=humanized_money_with_symbol (@order.total_cents.to_f/100) %></h3>
  </div>

  <section class="cart-show">
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Your Products</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @line_items_order.each do |item| %>
          <%= render 'item', line_item: item, quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
          <%=humanized_money_with_symbol (@order.total_cents.to_f/100) %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
