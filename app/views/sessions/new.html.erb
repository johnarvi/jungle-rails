
<br>
<div class="alert alert-success text-center" role="alert" style="background-color:whitesmoke">
<%= form_tag '/login' do %>
  <ul><h1>Login</h1></ul>
  <br>
  <ul><h3>Email:</h3></ul>
  <ul><%= text_field_tag :email %></ul>
  <ul><h3>Password:</h3></ul>
  <ul><%= password_field_tag :password %></ul>
  <br>
  <ul><%= submit_tag "Submit" %></ul>
  </ul>
<% end %>
</div>